@model OverripeBananas.Models.ShowGenreViewModel

<form asp-controller="Shows" asp-action="Index" method="get">
    <p>
        <div class="form-group-lg">
            <label>Genre:</label>
            <select asp-for="showGenre" asp-items="Model.genres" style="margin-bottom: 7px;">
                <option value="">All</option>
            </select>
            <br />
            <label>Title:</label> <input type="text" name="SearchString" style="margin-top: 8px;" /><br />
            <label>Rating:</label> <input type="text" name="showRating" style="margin-top: 10px;" /><br /><br />
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" value="Filter">Filter</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </p>
</form>
